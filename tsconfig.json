{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "preserve",
    "jsxFactory": "Taro.createElement",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/miniprogram-api-typings",
      "./src/typings",
    ],
    "paths": {
      "@/*": [ "src/*" ],
      "@my_assets/*": [ "src/assets/*" ],
      "@my_components/*": [ "src/components/*" ],
      "@my_utils/*": [ "src/utils/*" ],
      "@my_pages/*": [ "src/pages/*" ],
      "@my_models/*": [ "src/models/*" ],
      "@my_services/*": [ "src/services/*" ],
    },
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compileOnSave": false
}
